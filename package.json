{
    "name": "fresherflow",
    "version": "1.0.0",
    "description": "Job & Walk-in Opportunity Platform - Proper Monorepo",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "kill:port": "powershell -Command \"$p = (Get-NetTCPConnection -LocalPort 5000 -EA SilentlyContinue).OwningProcess | Select-Object -First 1; if ($p) { taskkill /F /PID $p } else { Write-Host 'Port 5000 is free' }\"",
        "dev": "npm run kill:port && turbo run dev",
        "dev:api": "npm run dev --workspace=apps/api",
        "dev:web": "npm run dev --workspace=apps/web",
        "build": "turbo run build",
        "build:api": "turbo run build --filter=fresherflow-api",
        "build:web": "turbo run build --filter=fresherflow-web",
        "deploy:web": "npm run build:web",
        "deploy:api": "npx turbo run db:generate --filter=fresherflow-api && npx turbo run build --filter=fresherflow-api",
        "start:api": "cd apps/api && npm start",
        "start:web": "cd apps/web && npm start",
        "db:generate": "cd apps/api && npm run db:generate",
        "db:push": "cd apps/api && npm run db:push",
        "db:seed": "cd apps/api && npm run db:seed",
        "db:studio": "cd apps/api && npm run db:studio",
        "lint": "npm run lint --workspaces --if-present",
        "clean": "rimraf apps/*/node_modules apps/*/dist packages/*/node_modules packages/*/dist node_modules",
        "typecheck": "npm run typecheck --workspaces --if-present",
        "test": "npm run test --workspaces --if-present"
    },
    "dependencies": {
        "turbo": "^2.8.1"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "rimraf": "^5.0.5",
        "typescript": "^5.7.3"
    },
    "packageManager": "npm@9.8.0",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "keywords": [
        "monorepo",
        "jobs",
        "walk-ins",
        "opportunities"
    ],
    "author": "",
    "license": "MIT"
}